@model AfspraakViewModel
@{
    ViewData["Title"] = "Afspraak";
}
<div class="container">
    <div class="row" style="margin-top: 20px;">
        <img src="https://i.gyazo.com/fcaca9babe2aac42ceb33ce00b9cd11d.png">
    </div>
    <div class="row" style="margin-bottom: 20px;">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <div class="col-md-7" style="height: 510px; background-color:white; box-shadow: 0px 0px 10px #888888; padding-left: 0px;">
                <div class="col-md-3" style="padding-left: 0px;">
                    <img src="https://i.gyazo.com/2c1dd6357be62e5860f3b7107b63f812.png">
                </div>
                <div class="col-md-9" style="height:510px;">
                    <div class="nexa_bold" style="font-size:25px; margin-top: 40px; margin-bottom:15px;">
                        Stap 2, Gegevens invullen
                    </div>
                    <form asp-controller="Afspraak" asp-action="bevestig" class="nexa_bold">
                        <div class="form-group">
                            <label asp-for="naam"></label>
                            <input asp-for="naam" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="trouwDatum"></label>
                            <input asp-for="trouwDatum" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="telefoon"></label>
                            <input asp-for="telefoon" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="emailadres"></label>
                            <input asp-for="emailadres" class="form-control" />
                        </div>
                        <input type="submit" value="NAAR STAP 3" class="btn btn-default specialbutton" style="" />
                    </form>
                </div>
            </div>
            <div class="col-md-5" style="background-color:#f0597c; color: white; height:510px;">
                <div style="margin-left:25px;" class="nexa_bold">
                    <div class="nexa_bold" style="font-size:25px; margin-top: 40px;">
                        Gekozen tijd en datum:
                    </div>
                    <div style="background-color: #f27390; font-size:20px; margin-top: 30px;">
                        <div style="padding: 8px; padding-left: 15px; padding-right: 15px;">
                            @Model.datum   @Model.tijd
                        </div>
                    </div>
                    <div class="sans-serif-thin" style="margin-top: 25px; font-size: 20px;">
                        Vul je persoonlijke gegevens in om de pasafpstraak compleet te maken.
                        </div>
                </div>
            </div>
        </div>
    <div class="col-md-1"></div>
        </div>
<div class="row" style="margin-top: 150px;">
    <div class="col-md-12" style="padding-left:0px;">
        <img src="https://i.gyazo.com/71eedcfffbc8dbd970f1e595f0586ac2.jpg" alt="Foto van stel" />
    </div>
</div>
</div>