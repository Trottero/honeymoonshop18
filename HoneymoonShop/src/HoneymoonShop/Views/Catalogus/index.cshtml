                </div>

                <!--Nieuwste collectie title-->
                <div class="row">
                    <img style="margin-left: 10px; margin-top: 0px; margin-bottom: 30px;" src="https://i.gyazo.com/de3dd937fc84bda1e2ccc6030a1f1840.png" />
                </div>
                <!--nieuwe collectie-->
                <div class="row nexa_bold cat">
                    @foreach (var item in Model.filteredJurken)
                    {
                        <div>
                            <a asp-action="Details" asp-route-id="@item.JurkID">
                                <img src="~/images/@item.AfbeeldingNaam1" class="dressfinder-pics"><div class="cat-textdescimage"> @item.Merk.MerkNaam</div>
                            </a>
                        </div>
