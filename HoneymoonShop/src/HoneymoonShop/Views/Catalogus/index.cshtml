@model CatalogusFilterModel
@{
    ViewData["Title"] = "Catalogus Page";
}
<style type="text/css">
    .navbarbackground {
        background-color: transparent;
    }

    header {
        height: 490px;
        background-image: url(/images/dressfinderr.png);
    }

    .navbar-pink > li > a {
        color: white;
    }
    .navbar-left > li{
         color:white;
     }
</style>

<div class="container">
    <div class="row" style="margin-top: 100px;">
    </div>
    <div class="row">
        <div class="row">
            
            @Html.Partial("_FilterPartial", Model);

            <div class="col-md-9">
                <div class="row">
                    <img style="margin-left: 10px; margin-bottom: 0px;" src="https://i.gyazo.com/a2d1a77ecd5e85569b9b0a0d43e1886f.png" />
                </div>


                <!--quicklinks-->
                <div class="row nexa_bold cat">
                    <a asp-action="Collection" asp-route-id="summer sale"><div class="dressfinder-pics"><img src="https://i.gyazo.com/0a2a7a5a10d3d09aab12b6178ee6b967.png" /></div></a>
                    <a asp-action="Collection" asp-route-id="summer sale"><div class="dressfinder-pics"><img src="https://i.gyazo.com/0a2a7a5a10d3d09aab12b6178ee6b967.png" /></div></a>
