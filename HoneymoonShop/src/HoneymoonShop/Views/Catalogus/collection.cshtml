@model IEnumerable<Models.Jurk>
@{
    ///List < BruidsJurk > list = (List<BruidsJurk>) Model;
    ViewData["Title"] = "Catalogus Page";
}
<div class="container">
    <div class="row">
        <div class="row">
            <!--sorteer functionaliteit-->
            <div class="col-md-3">

                <img src="https://i.gyazo.com/e44b4266483fe2766241ff98617e1ce9.png" />
            </div>
            <div class="col-md-9">
                <div class="row">
                    <div class="col-md-6"></div>
                    <div class="col-md-6">
                        <form class="form-inline">
                            <div class="form-group cat-searchbarright">
                                <label class="">Sorteer op: </label>
                                <select class="form-control">
                                    <option>Prijs Hoog/Laag</option>
                                    <option>Prijs Laag/Hoog</option>
                                    <option>Populariteit</option>
                                </select>
                            </div>
                        </form>
                    </div>

                </div>
                <div id="itemContainer" class="nexa_bold cat">
                    @{int count = 0; }
                    @foreach (var item in Model)
                    {
                        <div class="dressfinder-pics"><a asp-action="Details" asp-route-id="@item.JurkID"><img src="~/images/BruidsJurken/@item.AfbeeldingNaam1" class="dressfinder-pic"><div class="cat-textdescimage"> @item.Merk.MerkNaam</div></a></div>
                        /*/
                        if (count == 8)
                        {
                            <div class="dressfinder-pics dressfinderdouble-pic"> <img src="https://i.gyazo.com/fb6c1eb95de82a821e2db9ec11309447.png" /></div>
                        }

                        if (count == 16)
                        {
                            <div class="dressfinder-pics"><img src="https://i.gyazo.com/591a6599b50c11222d52d7c5b60170ea.png" /></div>
                        }
                        count++;
                        */
                    }
                </div>
                <!--Page selection-->
                <div class="row">
                    <div class="paginationBar">
                        <div class="col-md-6">
                            <form class="ItemsPerPageForm">
                                <label>Aantal tonen: </label>
                                <select>
                                    <option>6</option>
                                    <option>12</option>
                                    <option>18</option>
                                    <option>24</option>
                                </select>
                            </form>
                        </div>
                        <div class="col-md-2 col-md-offset-4">
                            <div class="holder"></div>
                            <div class="customBtns">
                                <span class="arrowPrev"></span>
                                <span class="arrowNext"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-12">
                <img src="https://i.gyazo.com/1d49f6a56d0b097ebe4a01c4677da0ab.jpg" alt="Foto van vrouw met bruidsjurk" />
            </div>
        </div>
    </div>
</div>