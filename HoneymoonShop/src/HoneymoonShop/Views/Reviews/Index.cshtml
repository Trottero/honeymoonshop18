@model IEnumerable<Models.Review>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Jurk.JurkID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Beoordeling)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.klantReview)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.JurkID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Naam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Beoordeling)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.klantReview)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ReviewID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ReviewID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ReviewID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
